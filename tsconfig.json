{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "bin",
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/*.ts"
  ]
}
